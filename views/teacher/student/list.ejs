<div class="card m-3">
    <div class="card-header flex">
      <h3 class="card-title">Student List</h3>
    </div>
    <div class="card-body">
      <table id="example1" class="table table-bordered table-striped">
        <thead>
        <tr>
          <th>SL#</th>
          <th>Name</th>
          <th>Student Id</th>
          <th>Email</th>
          <th>Class</th>
          <th>Action</th>
        </tr>
        </thead>
        <% if (studentList.length > 0) { %>
          <tbody>
              <% studentList.forEach(function(item, index){ %>
                  <tr>
                      <td><%= index+1 %></td>
                      <td><%= item.name %></td>
                      <td><%= item.student_id %></td>
                      <td><%= item.email %></td>
                      <td><%= item.email %></td>
                      <td>
                          <a href="/edit-student?id=<%= item._id%>" class="btn btn-primary btn-xs">
                              <i class="fa fa-pen"></i>
                          </a>
                          <a href="/delete-student?id=<%= item._id%>" class="btn btn-danger btn-xs">
                              <i class="fa fa-trash"></i>
                          </a>
                      </td>
                  </tr>
              <% }); %>
          </tbody>
          <% } %>
      </table>
    </div>
  </div>